{
  "name": "remark-loader",
  "version": "5.0.0",
  "description": "Load markdown through remark with some react-specific features.",
  "license": "MIT",
  "repository": "webpack-contrib/remark-loader",
  "author": "Greg Venech",
  "homepage": "https://github.com/webpack-contrib/remark-loader",
  "bugs": "https://github.com/webpack-contrib/remark-loader/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/webpack"
  },
  "main": "dist/cjs.js",
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    "start": "npm run build -- -w",
    "clean": "del-cli dist",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production babel src -d dist --copy-files",
    "commitlint": "commitlint --from=master",
    "security": "npm audit --production",
    "lint:prettier": "prettier \"{**/*,*}.{js,json,md,yml,css,ts}\" --list-different",
    "lint:js": "eslint --cache .",
    "lint": "npm-run-all -l -p \"lint:**\"",
    "test:only": "cross-env NODE_OPTIONS='--loader ./node_modules/ts-node/esm.mjs' jest",
    "test:watch": "npm run test:only -- --watch",
    "test:coverage": "npm run test:only -- --collectCoverageFrom=\"dist/**/*.js\" --coverage",
    "pretest": "npm run lint",
    "test": "npm run test:coverage",
    "prepare": "husky install && npm run build",
    "release": "standard-version"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "remark": "^14.0.0",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "front-matter": "^4.0.2",
    "vfile-reporter": "^7.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-env": "^7.14.7",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@webpack-contrib/eslint-config-webpack": "^3.0.0",
    "babel-jest": "^28.1.0",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "html-loader": "^3.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-light-runner": "^0.2.1",
    "lint-staged": "^13.0.0",
    "memfs": "^3.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "remark": "^14.0.1",
    "remark-bookmarks": "^3.0.0",
    "remark-frontmatter": "^4.0.0",
    "remark-gfm": "^3.0.0",
    "remark-html": "^15.0.0",
    "standard-version": "^9.3.1",
    "ts-node": "^10.8.0",
    "webpack": "^5.45.1"
  },
  "keywords": [
    "react",
    "markdown",
    "webpack",
    "webpack-loader",
    "loader"
  ]
}
